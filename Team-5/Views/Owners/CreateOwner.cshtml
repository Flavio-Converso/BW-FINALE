@using Team_5.Models.Auth
@model Team_5.Models.ViewModels.OwnerViewModel

@{
    ViewData["Title"] = "Create Owner";
    var users = ViewBag.Users as List<Users>;
}

<h1>@ViewData["Title"]</h1>

<form asp-action="CreateOwner" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Owners.Name" class="control-label"></label>
        <input asp-for="Owners.Name" class="form-control" />
        <span asp-validation-for="Owners.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Owners.Surname" class="control-label"></label>
        <input asp-for="Owners.Surname" class="form-control" />
        <span asp-validation-for="Owners.Surname" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Owners.PhoneNumber" class="control-label"></label>
        <input asp-for="Owners.PhoneNumber" class="form-control" />
        <span asp-validation-for="Owners.PhoneNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Owners.CF" class="control-label"></label>
        <input asp-for="Owners.CF" class="form-control" />
        <span asp-validation-for="Owners.CF" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="IdUser" class="control-label">User</label>
        <select asp-for="IdUser" class="form-control">
            <option disabled selected value="">Select a user</option>
            @foreach (var user in users)
            {
                <option value="@user.IdUser">@user.Username</option>
            }
        </select>
        <span asp-validation-for="IdUser" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="OwnersList" class="btn btn-secondary">Back to List</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
