@model IEnumerable<Team_5.Models.Pharmacy.Products>

@{
    ViewData["Title"] = "Product List";
}

<h2>Lista Prodotti</h2>
<div class="form-group">
    <label for="filter">Filtra per tipo:</label>
    <select id="filter" class="form-control">
        <option value="All">Tutti</option>
        <option value="Alimento">Alimento</option>
        <option value="Farmaco">Farmaco</option>
    </select>
</div>

<div class="my-4">
    <div class="d-flex align-items-center">
        <h5 class="mb-0">Inserisci la data per visualizzare i farmaci venduti:</h5>
        <input type="date" id="dateInput" class="form-control ms-3" style="max-width: 200px;" />
        <button id="dateBtn" class="btn btn-info text-white ms-3">Lista farmaci</button>
    </div>
    <div id="date" class="mt-2"></div>
</div>


<div class="my-4">
    <div class="d-flex align-items-center">
        <h5 class="mb-0">Inserisci il CF per visualizzare i farmaci venduti:</h5>
        <input type="text" id="cfInput" class="form-control ms-3" style="max-width: 200px;" />
        <button id="cfBtn" class="btn btn-info text-white ms-3">Lista farmaci</button>
    </div>
    <div id="cf" class="mt-2"></div>
</div>
<div id="cfDiv"></div>


<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Id. Prodotto
            </th>
            <th>
                Nome Prodotto
            </th>
            <th>
                Tipo Prodotto
            </th>
            <th>
                Uso
            </th>
            <th>
                Quantità
            </th>
            <th>
                Disponibilità
            </th>
            <th>
                Compagnia Farmaceutica
            </th>
            <th>
                Azioni
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="prow" data-type="@item.Type" style="cursor:pointer">
                <td id="idProduct" value="@item.IdProduct">
                    @item.IdProduct
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Use)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Availability)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.CompanyName)
                </td>
                <td>
                    <form asp-action="DeleteProduct" method="post" onsubmit="return confirm('Sei sicuro di voler eliminare questo prodotto?')">
                        @Html.AntiForgeryToken()
                        <input type="hidden" value="@item.IdProduct" name="id" />
                        <button type="submit" class="btn btn-danger">Elimina</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
<div id="printLocker"></div>