@model IEnumerable<Team_5.Models.Pharmacy.Products>

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>
<div class="form-group">
    <label for="filter">Filtra per tipo:</label>
    <select id="filter" class="form-control">
        <option value="All">Tutti</option>
        <option value="Alimento">Alimento</option>
        <option value="Farmaco">Farmaco</option>
    </select>
</div>

<div id="printLocker"></div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.First().IdProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Use)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Availability)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Company.CompanyName)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="prow" data-type="@item.Type">
                <td id="idProduct" value="@item.IdProduct">
                    @item.IdProduct
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Use)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Availability)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company.CompanyName)
                </td>
            </tr>
        }
    </tbody>
</table>